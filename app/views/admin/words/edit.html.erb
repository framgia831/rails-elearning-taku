<%= form_for [:admin, @category, @word] do |f| %>
    <%= render "shared/error_messages", object: f.object %>          

    <div class="row">
        <div class="col-md-4 col-center">
            <h1>Words</h1>
            <div class="form-group">
                <%= f.label :content %>
                <%= f.text_field :content, class: "form-control" %>
            </div>
            <div class="form-group options">
                <%= f.label :word_answers, "Options" %>
                <%= f.fields_for :word_answers do |wa| %>
                    <%= wa.text_field :content, class: "form-control" %>
                    <%= wa.check_box :correct {checked_value = 1, unchecked_value = 0} %>Correct<br/>
                <% end %>
            </div>
            <div>
                <%= f.submit "Update", class: "btn btn-primary form-control" %>
            </div>
            <%= link_to "back", [:admin, @category] %>
        </div>
    </div>
<% end %>