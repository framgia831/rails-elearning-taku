<div class="navbar-form navbar-right">
    <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>

        <button type="submit" class="btn btn-primary">Log in</button>
    <% end %>
</div>